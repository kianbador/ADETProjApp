<Window x:Class="ADETProjApp.View.WordGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADETProjApp.View"
        mc:Ignorable="d"
        Title="WordGameWindow" Height="700" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="False"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <Style x:Key="BoardCellStyle" TargetType="TextBlock">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="69"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
    </Window.Resources>
    <Grid Background="#282722">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="WORD GAME" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" Background="#D11717" Width="402" TextAlignment="Center" Margin="0,0,0,20"/>
            <UniformGrid Rows="6" Columns="5" Width="400" Height="400" Margin="0,20,0,0">
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_0_0" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_0_1" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_0_2" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_0_3" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_0_4" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_1_0" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_1_1" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_1_2" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_1_3" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_1_4" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_2_0" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_2_1" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_2_2" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_2_3" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_2_4" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_3_0" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_3_1" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_3_2" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_3_3" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_3_4" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_4_0" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_4_1" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_4_2" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_4_3" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_4_4" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_5_0" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_5_1" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_5_2" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_5_3" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
                <Border BorderBrush="#322F2C" BorderThickness="2">
                    <TextBlock x:Name="Cell_5_4" Style="{StaticResource BoardCellStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="100"/>
                </Border>
            </UniformGrid>

            <!-- User input and buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBox x:Name="AnswerTextBox" Width="200" Height="30" FontSize="14" Margin="0,0,10,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                     GotFocus="AnswerTextBox_GotFocus" LostFocus="AnswerTextBox_LostFocus">
                </TextBox>
                <Button x:Name="SubmitButton" Content="Submit" Width="100" Height="30" Click="SubmitButton_Click" Background="#D11717" Foreground="White" FontSize="15" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="NextLevelButton" Content="Try Another" Width="100" Height="30" Click="NextLevelButton_Click" Background="#FFBC26" FontSize="15" FontWeight="Bold" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
