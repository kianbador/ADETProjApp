             CommandParameter="{Binding}"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" BorderThickness="1" Background="White" BorderBrush="Black" FontWeight="Bold" Content="+" Height="20" Width="20" Margin="5"></Button>
