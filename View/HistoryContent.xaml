<UserControl x:Class="ADETProjApp.View.HistoryContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADETProjApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="950">
    <UserControl.Resources>
        <Style TargetType="DataGridRow">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </UserControl.Resources>
        <Grid Margin="0,50,0,0">
        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Width="Auto"  Margin="0,47,0,0"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="History" FontStyle="Italic" VerticalAlignment="Top" FontWeight="Bold" FontSize="24"/>
    </Grid>
</UserControl>
